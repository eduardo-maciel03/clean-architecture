<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMaui.Views.HomeView"
             
             xmlns:viewModel="clr-namespace:AppMaui.ViewModels"
             x:DataType="viewModel:EditViewModel"
             
             Title="Página Principal">
    <VerticalStackLayout HorizontalOptions="Center"
                         Margin="20">
        <Label Text="{Binding Username, StringFormat='Olá, {0:F0}'}"
               HorizontalTextAlignment="Center"/>

        <Label 
            Text="Aplicação usando MVVM com Clean Architecture, consumindo API CRUD SQL Server"
            HorizontalTextAlignment="Center"/>
        
    </VerticalStackLayout>
</ContentPage>